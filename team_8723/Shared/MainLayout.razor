@inherits LayoutComponentBase

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <NavMenu/>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Class="my-16 pt-16">
            @Body
            <MudAppBar Dense="true" Style="@($"top: auto; bottom: 0;background:{Colors.Orange.Accent4};")">
                <MudHidden Breakpoint="Breakpoint.MdAndUp" Invert="true">
                    <MudContainer Class="mt-2" Fixed="true" MaxWidth="MaxWidth.Medium">
                        <MudText Align="Align.Inherit" Typo="Typo.caption">桃園市立陽明高級中等學校/Taoyuan Municipal Yang Ming Senior High School</MudText><br />
                        <MudText Align="Align.Inherit" Typo="Typo.caption">330 桃園市桃園區德壽街八號</MudText>
                    </MudContainer>
                    <MudIconButton Target="_blank" Link = "https://www.youtube.com/channel/UCcH9JYqOzV4mkTNPc0E0yig" Icon="@Icons.Custom.Brands.YouTube" Size = "Size.Large" Color="Color.Error" aria-label="Youtube"></MudIconButton>
                    <MudIconButton Target="_blank" Link="https://www.facebook.com/Frc_8723-110764354730115" Icon="@Icons.Custom.Brands.Facebook" Size="Size.Large" Color="Color.Info" aria-label="Facebook"></MudIconButton>
                    <MudIconButton Target="_blank" Link = "https://www.instagram.com/frc_8723/" Icon="@Icons.Custom.Brands.Instagram" Size = "Size.Large" Color="Color.Secondary" aria-label="Instagram"></MudIconButton>
                </MudHidden>
                <MudHidden Breakpoint="Breakpoint.Sm" Invert="true">
                    <MudIconButton Target="_blank" Link = "https://www.youtube.com/channel/UCcH9JYqOzV4mkTNPc0E0yig" Icon="@Icons.Custom.Brands.YouTube" Size = "Size.Large" Color="Color.Error" aria-label="Youtube"></MudIconButton>
                    <MudIconButton Target="_blank" Link = "https://www.facebook.com/Frc_8723-110764354730115" Icon="@Icons.Custom.Brands.Facebook" Size = "Size.Large" Color="Color.Info" aria-label="Facebook"></MudIconButton> 
                    <MudIconButton Target="_blank" Link = "https://www.instagram.com/frc_8723/" Icon="@Icons.Custom.Brands.Instagram" Size = "Size.Large" Color="Color.Secondary" aria-label="Instagram"></MudIconButton>
                </MudHidden>
                <MudHidden Breakpoint="Breakpoint.Xs" Invert="true">
                    <MudIconButton Target="_blank" Link = "https://www.youtube.com/channel/UCcH9JYqOzV4mkTNPc0E0yig" Icon="@Icons.Custom.Brands.YouTube" Size = "Size.Medium" Color="Color.Error" aria-label="Youtube"></MudIconButton>
                    <MudIconButton Target="_blank" Link="https://www.facebook.com/Frc_8723-110764354730115" Icon="@Icons.Custom.Brands.Facebook" Size="Size.Medium" Color="Color.Info" aria-label="Facebook"></MudIconButton>
                    <MudIconButton Target="_blank" Link = "https://www.instagram.com/frc_8723/" Icon="@Icons.Custom.Brands.Instagram" Size = "Size.Medium" Color="Color.Secondary" aria-label="Instagram"></MudIconButton>
                </MudHidden>
            </MudAppBar>
        </MudContainer>
    </MudMainContent>
    
</MudLayout>

@code {
    bool _drawerOpen = true;
    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }

}